{
  "manifest_version": 3,
  "name": "TabSplit",
  "description": "Split a tab two resizable windows.",
  "version": "0.2",
  "permissions": ["tabs","scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["main.css"]
    }],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  }
}